<!DOCTYPE html>
<html>
<head>
  <title>Prose</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <link href='http://fonts.googleapis.com/css?family=Droid+Serif:400,700,400italic,700italic' rel='stylesheet' type='text/css'>
  <link href='http://fonts.googleapis.com/css?family=Roboto+Slab:100,300' rel='stylesheet' type='text/css'>
  <link href='http://fonts.googleapis.com/css?family=Roboto:400,100,300,500,700,900' rel='stylesheet' type='text/css'>
  <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
  <%= csrf_meta_tags %>
</head>
<body>
<div id="wrapper">
  <section id="top_nav">
    <div id="banner">
      <%= link_to "", root_path, class: "logo_link" %>
    </div>
    <div id="centered_nav">
      <ul>
        <li>
          <%= link_to articles_path do %> 
            articles <i class="fa fa-angle-down"></i>
          <% end %>
          <ul>
            <li><%= link_to "technical clips", science_articles_path%></li>
            <li><%= link_to "general clips", social_articles_path%></li>
            <li><%= link_to "academic publications", academic_papers_path%></li>
          </ul>
        </li>
        <li>
          <%= link_to "hire me", hire_me_path %>
        </li>
        <% if user_signed_in? %>
          <li>
            <%= link_to 'sign out', destroy_user_session_path, :method => :delete %>
          </li>
        <% end %>
      </ul>
    </div>
  </section>
  <section id="content">
    <%= yield %>
  </section>
</div>

</body>
</html>
