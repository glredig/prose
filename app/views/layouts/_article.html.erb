<li class="article">
  <div class="left_box">
    <%= image_tag article.article_image.thumb.url %>
  </div>
  <div class="right_box">
    <%= link_to article.title, article.link, class: "title_link" %><br>
    <p>
      <%= article.content %>
    </p>
    <%= link_to "Read more...", article.link, class: "read_more_link" %>
    <% if user_signed_in? %>
      | <%= link_to "Edit", edit_article_path(article), class: "read_more_link" %>
      | <%= link_to "Delete", article_path(article), class: "read_more_link", method: :delete, data: { confirm: "Are you sure?" } %>
    <% end %>
  </div>
  <div class="clear"></div>
</li>