<%= simple_form_for @article, html: { multipart: true } do |f| %>
  <%= f.input :title %>
  <%= f.input :short_title %>
  <%= f.input :content %>
  <%= f.input :featured, as: :boolean %>
  <%= f.input :link %>
  <%= f.input :category, collection: Article::CATEGORIES, include_blank: false %>
  <%= f.file_field :article_image %>

  <%= f.button :submit %>
<% end %>