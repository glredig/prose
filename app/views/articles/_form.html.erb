<%= simple_form_for @article, html: { multipart: true } do |f| %>
  <%= f.input :title %>
  <%= f.input :short_title %>
  <%= f.input :content, as: :text, label: "Summary" %>
  <%= f.input :featured, as: :boolean %>
  <%= f.input :link %>
  <%= f.input :category, collection: 0..1, label_method: ->(obj){Article::CATEGORIES[obj]},include_blank: false %>
  <br><br>
  <%= f.file_field :article_image %>
  <br><br>

  <%= f.button :submit %>
<% end %>